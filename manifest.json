{
  "manifest_version": 2,

  "name": "__MSG_extName__",
  "description": "__MSG_extDescription__",
  "version": "0.0.1.1",
  "default_locale": "en",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "tabs",
    "webNavigation",
    "https://meet.jit.si/*",
    "https://www.netflix.com/*",
    "https://www.hulu.com/*",
    "https://www.play.hbogo.com/*",
    "https://www.amazon.com/Amazon-Video"
  ],
  "page_action": {
    "default_icon": {
      "19": "icon.png",
      "38": "icon.png"
    },
    "default_title": "__MSG_extName__",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
